{
  "apps": [
    {
      "name": "genbeta-backend",
      "script": "src/server.js",
      "instances": "max",
      "exec_mode": "cluster",
      "max_memory_restart": "1G",
      "node_args": "--max-old-space-size=2048",
      "env": {
        "NODE_ENV": "production",
        "PORT": "5000"
      },
      "env_production": {
        "NODE_ENV": "production",
        "PORT": "5000",
        "MONGO_MAX_POOL_SIZE": "100",
        "MONGO_MIN_POOL_SIZE": "20"
      },
      "error_file": "./logs/err.log",
      "out_file": "./logs/out.log",
      "log_file": "./logs/combined.log",
      "time": true,
      "watch": false,
      "max_restarts": 10,
      "min_uptime": "5s",
      "kill_timeout": 5000
    }
  ]
}